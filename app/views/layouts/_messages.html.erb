<% flash.each do |name,msg| %>
    <div class="row">
	  <div class = "col-md-offset-1 col-md-10">

		 <div class = 'alert alert-<%= "#{name}"%> alert-dismissable'>
		   <button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true">
			   &times;
		   </button>
		   <%= msg %>
		 </div>
	  </div>
	</div> 
<% end %>